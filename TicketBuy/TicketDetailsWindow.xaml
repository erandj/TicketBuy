<Window x:Class="TicketBuy.TicketDetailsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TicketBuy"
        mc:Ignorable="d"
        Title="TicketDetailsWindow" Height="500" Width="840"
        WindowStartupLocation="CenterScreen"
        Background="{StaticResource FirstColor}"
        ResizeMode="CanMinimize"
        >
    <Grid>
        <ScrollViewer>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="60"/>
                    <RowDefinition Height="1*"/>
                </Grid.RowDefinitions>
                <TextBlock Text="{Binding FlightCode}" HorizontalAlignment="Left" Margin="30,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" FontSize="22" FontWeight="Bold"/>

                <Frame Grid.Row="1" x:Name="ContentFrame"></Frame>
            </Grid>
        </ScrollViewer>
    </Grid>
</Window>
